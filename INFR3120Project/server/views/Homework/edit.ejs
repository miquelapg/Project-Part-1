<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField"> Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Homework Name" value="<%= Homework.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="subjectTextField">Subject</label>
                    <input type="text" class="form-control" id="subjectTextField" placeholder="Enter Subject" name="Subject" value="<%= Homework.Subject %>" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Due Date</label>
                    <input type="text" class="form-control" id="dateTextField" placeholder="Enter Due Date" name="Date" value="<%= Homework.Date %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter Description" name="Description" required><%= Homework.Description %></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fa-solid fa-ban"></i></button>     
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>