<%- include Partials/header.ejs %>
<%- include Partials/main_nav.ejs %>

<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Name of the Homework" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="subjectTextField">Subject</label>
                    <input type="text" class="form-control" id="SubjectTextField" placeholder="Enter the Subject Name" name="Subject"  required>
                </div>
                <div class="form-group">
                    <label for="Due_DateTextField">Due Date</label>
                    <input type="text" class="form-control" id="Due_DateTextField" placeholder="Enter the Due Date" name="Due_Date" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Homework Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter the Homework Description" name="Description" required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>

<%- include Partials/footer.ejs %>